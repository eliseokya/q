# Atomic Mesh Detection Environment Variables

# Node Configuration
NODE_ENV=production
LOG_LEVEL=info

# Chain Endpoints (IPC paths)
ETHEREUM_IPC=/tmp/ethereum.ipc
ARBITRUM_IPC=/tmp/arbitrum.ipc
POLYGON_IPC=/tmp/polygon.ipc
BASE_IPC=/tmp/base.ipc
OPTIMISM_IPC=/tmp/optimism.ipc

# Database
DB_PATH=/data/detection.db
DB_MAX_CONNECTIONS=100

# Detection Settings
MIN_PROFIT_USD=50
MAX_GAS_PERCENTAGE=0.5
DETECTION_WORKERS=16

# Execution Integration
EXECUTION_ENDPOINT=unix:///tmp/execution.sock
EXECUTION_TIMEOUT=5000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
ALERT_WEBHOOK=

# API Keys (if needed)
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=
ARBISCAN_API_KEY=

# Performance
BUFFER_SIZE=10000
PARALLEL_JOBS=8
CACHE_SIZE=1000